{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://wex-pb-ingestor/schemas/markup_profile.schema.json",
  "title": "Markup Profile",
  "type": "object",
  "additionalProperties": false,
  "required": ["profile_name", "currency", "rounding", "tiers"],
  "properties": {
    "profile_name": {
      "type": "string",
      "minLength": 1
    },
    "currency": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "rounding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["nearest_cent"]
        }
      }
    },
    "tiers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["min_cost", "markup_percent"],
        "properties": {
          "min_cost": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "max_cost": {
            "type": ["number", "null"],
            "exclusiveMinimum": 0
          },
          "markup_percent": {
            "type": "number",
            "minimum": 0
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "order": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "labor_cost": {"type": ["number", "null"], "minimum": 0},
        "labor_rate": {"type": ["number", "null"], "minimum": 0}
      }
    }
  }
}
